# Application
APP_NAME="Domestika Laravel API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_FORMAT=json

# Database - PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=laravel_api
DB_USERNAME=laravel
DB_PASSWORD=secret

# Cache & Session - Redis
CACHE_STORE=redis
CACHE_PREFIX=domestika_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Redis
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Queue & Messaging - RabbitMQ
QUEUE_CONNECTION=rabbitmq
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=laravel
RABBITMQ_PASSWORD=secret
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=default
RABBITMQ_EXCHANGE=laravel

# JWT Authentication
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE_PERIOD=0
JWT_SHOW_BLACK_LIST_EXCEPTION=true

# Security
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS="*"
CORS_ALLOWED_HEADERS="*"
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=false

RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=10240

# Broadcasting
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# MinIO (S3 Compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=domestika
MINIO_USE_PATH_STYLE_ENDPOINT=true

# Mail (Development - Mailhog)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@domestika.local"
MAIL_FROM_NAME="${APP_NAME}"

# Observability - Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# pgAdmin
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123

# L5-Swagger
L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_CONST_HOST=http://localhost:8000

# API Configuration
API_VERSION=v1
API_PREFIX=api
API_RATE_LIMIT=60
API_RATE_LIMIT_DRIVER=redis

# Maintenance
APP_MAINTENANCE_DRIVER=file

# BCRYPT
BCRYPT_ROUNDS=12

# Vite
VITE_APP_NAME="${APP_NAME}"
